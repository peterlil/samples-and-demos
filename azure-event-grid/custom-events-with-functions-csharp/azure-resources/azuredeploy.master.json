{
    "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
		"_artifactsLocation": {
			"type": "string"
		},
		"_artifactsLocationSasToken": {
			"type": "securestring"
		}
    },
    "variables": {
        "appInsightsLinkedTemplateFileName": "azuredeploy.appinsights.json",
        "appInsightsLinkedTemplateParameterFileName": "azuredeploy.appinsights.parameters.json",
        "publisherFunctionLinkedTemplateFileName": "azuredeploy.publisherfunction.json",
        "publisherFunctionLinkedTemplateParameterFileName": "azuredeploy.publisherfunction.parameters.json"
	},
    "resources": 
    [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "name": "appInsights-linked",
            "dependsOn": [],
			"properties": {
                "mode": "Incremental",
                "templateLink": {
					"uri": "[concat(parameters('_artifactsLocation'), '/', variables('appInsightsLinkedTemplateFileName'), '?', parameters('_artifactsLocationSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parametersLink": {
                    "uri": "[concat(parameters('_artifactsLocation'), '/', variables('appInsightsLinkedTemplateParameterFileName'), '?', parameters('_artifactsLocationSasToken'))]",
					"contentVersion": "1.0.0.0"
				}
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "name": "publisherfunction-linked",
            "dependsOn": ["Microsoft.Resources/deployments/appInsights-linked"],
			"properties": {
                "mode": "Incremental",
                "templateLink": {
					"uri": "[concat(parameters('_artifactsLocation'), '/', variables('publisherFunctionLinkedTemplateFileName'), '?', parameters('_artifactsLocationSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parametersLink": {
                    "uri": "[concat(parameters('_artifactsLocation'), '/', variables('publisherFunctionLinkedTemplateParameterFileName'), '?', parameters('_artifactsLocationSasToken'))]",
					"contentVersion": "1.0.0.0"
				}
            }
        }
    ]
}